<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mt-5">
            <div class="card-header"><h3>Clientes</h3></div>
            <div class="card-body">
                {{#if customers}}
                <table class="table table-striped text-center">
                    <thead class="thead-dark">
                        <th>#</th>
                        <th>NOMBRE</th>
                        <th> <i class="fas fa-cog"></i> </th>
                    </thead>
                    <tbody>
                        {{#each customers}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>
                                <div class="btn-group dropleft">
                                    <button type="button" class="btn btn-secondary dropdown-toggle"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-bars"></i>
                                    </button>
                                    <div class="dropdown-menu text-center">
                                        <a class="btn btn-info btn-block p-3" href="#">
                                            <i class="fas fa-eye"></i>
                                            Ver
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="btn btn-warning btn-block p-3" href="/customers/edit/{{id}}">
                                            <i class="fas fa-edit"></i>
                                            Editar
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="btn btn-danger btn-block p-3" href="/customers/delete/{{id}}">
                                            <i class="fas fa-trash"></i>
                                            Borrar
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#"><small>{{name}}</small></a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="container">
                    <h2 class="text-center">No hay clientes agregados </h2><br><hr>
                    <a class="btn btn-info btn-block" href="/customers/add"><i class="fas fa-user-plus"></i> Agregar clientes</a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>